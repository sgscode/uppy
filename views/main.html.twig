      <form  id="sendfile" method="post" role="form" action="http://localhost/filehost/web/" enctype="multipart/form-data">
        
        <div class="form-group" >
          <input type="file" name="userfile" id="filee" />
        </div>
        <button type="submit" >Submit</button>
       
      </form>
    </div>
 
 
